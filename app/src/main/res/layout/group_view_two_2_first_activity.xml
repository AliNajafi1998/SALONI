<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:padding="6dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/time_from_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#565657"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textColor="#7E7E7F"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/time_from_txt"
        app:layout_constraintEnd_toStartOf="@+id/time_from_txt"
        app:layout_constraintTop_toTopOf="@+id/time_from_txt" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textColor="#7E7E7F"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/time_from_txt"
        app:layout_constraintEnd_toStartOf="@+id/tv_start"
        app:layout_constraintTop_toTopOf="@+id/time_from_txt" />

    <TextView
        android:id="@+id/tv_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textColor="#7E7E7F"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/time_from_txt"
        app:layout_constraintEnd_toStartOf="@+id/tv_to"
        app:layout_constraintTop_toTopOf="@+id/time_from_txt" />

</android.support.constraint.ConstraintLayout>